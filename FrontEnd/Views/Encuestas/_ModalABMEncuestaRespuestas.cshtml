@model Entidades.Encuesta_Respuesta

@{
    string _ControllerName = "Encuestas";
}

<div id="modalFormDefault" class="modal fade modalFormABM" tabindex="-1" role="dialog" aria-labelledby="formModalABM" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="exampleModalLabel3">
                    @(Model.encres_id.Equals(0) ? "Alta de Respuesta" : "Modificar Respuesta")
                </h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i data-feather="x"></i></span>
                </button>
            </div>
            @using (Html.BeginForm("SaveModalEncuestaRespuesta", _ControllerName, FormMethod.Post, new { id = "formABMDefault", name = "formABMDefault", @class = "formularioABMModal", refreshDatatable = "true", resetForm = "true", closeForm = "true" }))
            {
        <div class="modal-body">
            @Html.HiddenFor(x => x.IdEncriptado)
            @Html.HiddenFor(x => x.encres_id)
            @Html.HiddenFor(x => x.Encuesta.enc_id)
            @Html.HiddenFor(x => x.Encuesta.IdEncriptado)
            <div class="row mt-2">
                <div class="col-md-12">
                    @Html.LabelFor(model => model.encres_contenido, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.encres_contenido, new { htmlAttributes = new { @class = "form-control form-control-sm", required = "required", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.encres_contenido, "", new { @class = "text-danger" })
                </div>
                <div class="col-md-12">
                    @Html.LabelFor(model => model.encres_valor, htmlAttributes: new { @class = "control-label" })
                    @Html.EditorFor(model => model.encres_valor, new { htmlAttributes = new { @class = "form-control form-control-sm", required = "required", autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.encres_valor, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>


                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary btn-cerrar btn-app" data-dismiss="modal">Cerrar</button>
                    <button type="submit" class="btn btn-success pull-left btn-app"> <i class="fa fa-save"></i> Guardar</button>
                </div>
            }
        </div>
    </div>
</div>

