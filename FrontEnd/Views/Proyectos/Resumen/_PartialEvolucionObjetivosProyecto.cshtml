@model IEnumerable<Entidades.Vistas.Progreso>

  
<div class="card card-hover card-active-projects mt-2">
    <div class="card-header bg-transparent pd-15">
        <h6 class="card-title mg-b-0">@ViewBag.Progreso en Ejecución</h6>
        <nav class="nav align-items-center">

        </nav>
    </div><!-- card-header -->
    <ul class="list-group list-group-flush">
        @foreach (Entidades.Vistas.Progreso progreso in Model)
        {
            int porcentaje = Convert.ToInt32(progreso.porcentaje);
            string wd = "wd-" + Convert.ToInt32(5 * Math.Round(porcentaje / 5.0)).ToString() + "p";
            <li class="list-group-item">
                <div class="media">
                    @if (progreso.url_imagen.Length > 0)
                    {
                        <div class="project-img bg-warning"><svg xmlns="@progreso.url_imagen" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-sidebar svg-18"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect><line x1="9" y1="3" x2="9" y2="21"></line></svg></div>
                    }
                    <div class="media-body mg-t-10 mg-md-t-0 mg-md-l-10">
                        <h6 class="project-title"><a href="">@progreso.titulo</a></h6>
                    </div>
                </div><!-- media -->
                <div class="progress-wrapper">
                    <div class="progress-label"><span>Progreso</span><span>@progreso.porcentaje %</span></div>
                    <div class="progress">
                        <div class="progress-bar bg-green @wd" role="progressbar" aria-valuenow="@porcentaje" aria-valuemin="0" aria-valuemax="100"></div>
                    </div>
                </div>

                @switch (progreso.estado)
                {
                    case "vencido":
                        <div id="fechaFin" class="project-date-end bg-danger-light">Vencido: @progreso.fecha_fin</div>
                        break;
                    case "porvencer":
                        <div id="fechaFin" class="project-date-end bg-warning-light">Finaliza: @progreso.fecha_fin</div>
                        break;
                    case "ejecucion":
                        <div id="fechaFin" class="project-date-end bg-indigo-light">Finaliza: @progreso.fecha_fin</div>
                        break;
                    case "terminado":
                        <div id="fechaFin" class="project-date-end bg-success-light">Completado: @progreso.fecha_fin</div>
                        break;
                    case "default":
                        <div id="fechaFin" class="project-date-end bg-gray">Finaliza: @progreso.fecha_fin</div>
                        break;

                }

                <div><a href="" class="link-04"><svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal svg-16"><circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle></svg></a></div>
            </li>
        }


    </ul>
</div><!-- card -->



