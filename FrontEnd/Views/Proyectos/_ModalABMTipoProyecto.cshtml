@model Entidades.Tipo_Proyecto

@{
    string _ControllerName = "Proyectos";

    Entidades.App.Token oToken = Filters.VerificarToken.ConsultarToken();
}

<div id="modalFormDefault" class="modal fade modalFormABM" tabindex="-1" role="dialog" aria-labelledby="formModalABM" aria-hidden="true" data-backdrop="static">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h6 class="modal-title" id="exampleModalLabel3">
                    @(Model.tproy_id.Equals(0) ? "Alta de Tipo de Proyecto " : "Modificar Tipo de Proyecto")
                </h6>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true"><i data-feather="x"></i></span>
                </button>
            </div>
            @using (Html.BeginForm("SaveModalTipoProyecto", _ControllerName, FormMethod.Post, new { id = "formABMDefault", name = "formABMDefault", @class = "formularioABMModal", refreshDatatable = "true", resetForm = "true", closeForm = "true" }))
            {
            <div class="modal-body">
                @Html.HiddenFor(x => x.tproy_id)


                <div class="row mt-2">
                    <div class="col-md-12">
                        @Html.LabelFor(model => model.tproy_nombre, htmlAttributes: new { @class = "control-label" })
                        @Html.EditorFor(model => model.tproy_nombre, new { htmlAttributes = new { @class = "form-control form-control-sm", required = "required", autocomplete = "off" } })
                        @Html.ValidationMessageFor(model => model.tproy_nombre, "", new { @class = "text-danger" })
                    </div>
                </div>
              

             </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary btn-cerrar btn-app" data-dismiss="modal">Cerrar</button>
                <button type="submit" class="btn btn-success pull-left btn-app"> <i class="fa fa-save"></i> Guardar</button>
            </div>
            }
        </div>
    </div>
</div>


