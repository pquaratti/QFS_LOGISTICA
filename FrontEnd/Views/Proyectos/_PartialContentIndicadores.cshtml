@model IEnumerable<Entidades.Proyecto_Indicador>

@{
    var _ControllerName = "Indicadores";
}
<div class="d-flex flex-row-reverse mt-2 mb-2">
    <span class="badge badge-danger">Borrar</span>
    <span class="badge badge-info">Configurar</span>
</div>
<div style="zoom:90%">
    <table class="table table-sm table-header-app datatablePartial-scrollbar">
        <thead>
            <tr>
                <th>Nombre</th>
                <th>Descripción</th>
                <th>Valor Base</th>
                <th>Valor Meta</th>
                <th width="10%"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (Entidades.Proyecto_Indicador renglon in Model)
            {
                <tr class="original" data-bind="@renglon.IdEncriptado">                  
                    <td>@renglon.pryind_nombre</td>
                    <td>@renglon.pryind_descripcion</td>
                    <td>@renglon.pryind_valor_base</td>
                    <td>@renglon.pryind_valor_meta</td>
                    <td style="text-align: center; vertical-align: middle;">
                        <button type="button"
                                modal-value-primary="@renglon.Proyecto.IdEncriptado"
                                modal-value-secondary="@renglon.IdEncriptado"
                                modal-value-aux="0"
                                modal-url="@Url.Action("PartialModalABMIndicador",_ControllerName)"
                                class="btn btn-info btn-sm btn-grid btnOpenModal" title="Modificar Indicador">
                            <i class="fa fa-edit"></i>
                        </button>

                        <button type="button"
                                data-id-rel="@renglon.IdEncriptado"
                                url-delete="@Url.Action("Delete",_ControllerName)"
                                class="btn btn-danger btn-sm btn-grid btn-borrar-detalle" title="Borrar Indicador">
                            <i class="fa fa-trash"></i>
                        </button>

                    </td>
                </tr>
            }

        </tbody>
    </table>
</div>

<script>

    function functionAccionCustom(pClave) {
        refreshData();
    }

</script>
