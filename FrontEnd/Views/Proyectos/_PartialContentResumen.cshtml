@model Entidades.Proyecto

<div id="viewContentDetalleProyecto"></div>
<div id="viewContentDetalleObjetivos"></div>

<div class="row mt-3">
    <div class="col-md-4">
    </div>
    <div class="col-md-8">
        <div class="d-flex flex-row-reverse">           
            @if (Model.Cerrado == false)
            {
            <button type="button"
                    data-id-rel="@Model.IdEncriptado"
                    accion-url="@Url.Action("CerrarProyecto","Proyectos")"
                    accion-nombre-clave="cerrarProyectos"
                    accion-titulo-modal="Finalizar Configuración"
                    accion-mensaje-modal="Desea terminar la configuración del Proyecto ?"
                    accion-mensaje-exitoso="Proyecto configurado con Éxito!"
                    class="btn btn-xs btn-primary m-1 btn-question-action" title="Cerrar">
                <i class="fa fa-lock"></i> Cerrar Configuración
            </button>
            }
        </div>
    </div>
</div>


<script>

    function cerrarProyectos() {
        refreshData();
    }

    function LoadTarjeta()
    {
        _urlPartial = "@Url.RouteUrl("Default", new { action = "PartialDetalleCabeceraProyecto", controller = "Proyectos" })";
        APP_LoadPartialView('#viewContentDetalleProyecto', { proyecto: '@Model.IdEncriptado' }, _urlPartial);
    }
    function LoadObjetivosProgreso()
    {
        _urlPartial = "@Url.RouteUrl("Default", new { action = "PartialDetalleObjetivosProyecto", controller = "Proyectos" })";
        APP_LoadPartialView('#viewContentDetalleObjetivos', { proyecto: '@Model.IdEncriptado' }, _urlPartial);
    }

    LoadObjetivosProgreso();
    LoadTarjeta();


</script>