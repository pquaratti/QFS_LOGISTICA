@model IEnumerable<Entidades.App.SIS_Organizacion>
@{
    string _ControllerName = "Organizaciones";

}
<table class="table table-sm table-header-app datatablePartial-scrollbar">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Abreviatura</th>
            <th>Mail</th>
            <th width="100px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Entidades.App.SIS_Organizacion renglon in Model)
        {
            <tr>
                <td>@renglon.org_nombre</td>
                <td>@renglon.org_abreviatura</td>
                <td>@renglon.org_mail</td>
                <td>
                    <button type="button"
                            modal-value-primary="@renglon.org_id"
                            modal-value-secondary="0"
                            modal-value-aux="0"
                            modal-url="@Url.Action("PartialModalABM",_ControllerName)"
                            class="btn btn-info btn-sm btn-grid btnOpenModal" title="">
                        <i class="fa fa-edit"></i>
                    </button>
                    <button type="button"
                            data-id-rel="@renglon.org_id"
                            url-delete="@Url.Action("Delete",_ControllerName)"
                            class="btn btn-danger btn-sm btn-grid btn-borrar-detalle" title="Borrar item">
                        <i class="fa fa-trash"></i>
                    </button>
                </td>
            </tr>
        }
    </tbody>
</table>


