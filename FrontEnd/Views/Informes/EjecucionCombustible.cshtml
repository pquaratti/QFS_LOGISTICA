@{
    ViewBag.Title = "Informe de ejecución - Combustible";
    ViewBag.Subtitle = "Reporte de ejecución de combustible";
    Layout = "~/Views/Shared/_Layout.cshtml";
    string _ControllerName = "Informes";
}

<div class="content-header header-title-page ml-0 mr-0">
    <div class="col-md-9">
        <h4 class="content-title content-title-xs">Informe de ejecución - Combustible</h4>
        <p>Esta sección mostrará información relacionada a la ejecución del Combustible</p>
    </div>

    <div class="col-md-3 pr-0">
        <div class="d-flex flex-row-reverse">

        </div>
    </div>
</div>

<div class="card card-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label class="control-label" for="ddlDistrito">Eleccion</label>
                            @Html.DropDownList("ddlEleccion", new SelectList(Negocio.DDL.ListarElecciones(Filters.VerificarToken.ConsultarToken(), true), "Value", "Text", 0), new { @class = "form-control camporequerido input-sm select2 changeGrilla", style = "top:0px;height:30px", required = "required" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label" for="ddlDistrito">Tipo</label>
                            @Html.DropDownList("ddlTipoEleccion", new SelectList(Negocio.DDL.ListarTiposElecciones(Filters.VerificarToken.ConsultarToken(), true), "Value", "Text", 0), new { @class = "form-control camporequerido input-sm select2 changeGrilla", style = "top:0px;height:30px", required = "required" })
                        </div>
                    </div>
      
                    <div class="col-md-2">
                        <div class="form-group">
                            <button id="btnBuscar" type="button" class="btn btn-primary btn-block btn-sm mt-4"><i class="fa fa-search"></i> Cargar informe</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>

<div class="card card-body">
    <div class="row">
        <div class="col-sm-12">
            <div class="white-box">
                <div id="viewContentInforme"></div>
            </div>
        </div>
    </div>
</div>


@section scripts{

    <script>
        $(document).ready(function () {

        });


        $('#btnBuscar').click(function (e) {
            e.preventDefault();

            dataObject = {
                eleccionID: $('#ddlEleccion').val(),
                tipoEleccionID: $('#ddlTipoEleccion').val()
            };
            _urlPartial = "@Url.RouteUrl("Default", new { action = "PartialInformeEjecucionCombustible", controller = "Informes" })";
            APP_LoadPartialView('#viewContentInforme', dataObject, _urlPartial);
        });
    </script>


}
