@model IEnumerable<Entidades.Cliente>

@{
    string _ControllerName = "Clientes";
}

<table class="table table-sm table-header-app datatablePartial-scrollbar">
    <thead>
        <tr>
            <th>Razón Social</th>
            <th>CUIT</th>
            <th>Mail</th>
            <th width="80px"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Entidades.Cliente renglon in Model)
        {
            <tr>

                <td>@renglon.cli_razon_social</td>
                <td>@renglon.cli_cuit</td>
                <td>@renglon.cli_mail</td>
                <td style="text-align: center; vertical-align: middle;">

                    <button type="button"
                            modal-value-primary="@renglon.IdEncriptado"
                            modal-value-secondary="0"
                            modal-value-aux="0"
                            modal-url="@Url.Action("PartialModalABMClientes",_ControllerName)"
                            class="btn btn-info btn-sm btn-grid btnOpenModal" title="">
                        <i class="fa fa-edit"></i>
                    </button>


                    <button type="button"
                            data-id-rel="@renglon.IdEncriptado"
                            url-delete="@Url.Action("Delete",_ControllerName)"
                            class="btn btn-danger btn-sm btn-grid btn-borrar-detalle" title="Borrar Cliente">
                        <i class="fa fa-trash"></i>
                    </button>




                </td>
            </tr>
        }

    </tbody>
</table>

<script>

    function functionAccionCustom(pClave) {
        refreshData();
    }

</script>
